{{>menu_logado}}

<div class="container-fluid" style="display: flex; flex-direction: row;">

    <!-- Seção ocupando a parte da esquerda -->
    <section style="flex: 0 0 25%; padding: 20px;">
        <div class="d-flex align-items-center justify-content-center h-100"> 
            <div class="card" style="height: 50%; width: 75%">
                <div class="card-body">
                    <form class="d-flex flex-column align-items-center" action="/adicionar_lista" method="post"> 
                        <div class="mb-3">
                            {{!-- <label for="nomeLista" class="form-label">Nome</label> --}}
                            <input type="text" class="form-control" name="nome" id="nomeLista" placeholder="Digite o nome da lista"> 
                        </div>
                        <button type="submit" class="btn btn-primary">Adicionar nova lista</button> 
                    </form>
                    <div class="mt-4">
                        <h5>Sua(s) Lista(s)</h5>
                        <ul id="lista-projetos" style="list-style: none; text-decoration: none; display: inline-block;">
                            <!-- Cada projeto terá um identificador único, como o próprio nome do projeto -->
                            {{#each projetos}}
                                <li class="projeto" data-nome="{{this}}">{{this}}</li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Seção ocupando a parte central -->
    <main style="flex: 1; padding: 20px;">
        <div class="d-flex align-items-center justify-content-center h-100 w-100"> 
            <div class="card" style="height: 50%; width: 75%">
                <div class="card-body d-flex justify-content-between align-items-start">
                    <div>
                        <h5 class="card-text mb-4">{{ projetoSelecionado }}</h5>
                    </div>
                    <div>
                        <button type="button" class="btn btn-primary">Adicionar Tarefa</button>
                    </div>
                </div>
            </div>
        </div>
    </main>

</div>

{{>footer}}

<script>
    $(document).ready(function() {
        // Fazer requisição AJAX para buscar os projetos do usuário
        $.ajax({
            url: '/projetos',
            method: 'GET',
            success: function(response) {
                // Atualizar a lista de projetos na página
                var projetosHtml = '';
                response.forEach(function(projeto) {
                    projetosHtml += '<li style="cursor: pointer;" class="projeto" data-nome="' + projeto + '">' + projeto + '</li>';
                });
                $('#lista-projetos').html(projetosHtml);

                // Adicionar evento de clique aos itens da lista de projetos
                $('.projeto').click(function() {
                    var projetoSelecionado = $(this).data('nome');
                    // Enviar requisição para a rota do servidor para atualizar o projeto selecionado
                    $.ajax({
                        url: '/selecionar_projeto',
                        method: 'POST',
                        data: { projetoSelecionado: projetoSelecionado },
                        success: function(response) {
                            // Recarregar a página para refletir a alteração
                            location.reload();
                        },
                        error: function(xhr, status, error) {
                            // Tratar erros da requisição
                            console.error('Erro ao selecionar projeto:', error);
                        }
                    });
                });
            },
            error: function(xhr, status, error) {
                // Tratar erros da requisição
                console.error('Erro ao buscar projetos:', error);
            }
        });
    });
</script>
